# 開発環境用Dockerfile
FROM ruby:3.3.0

# Node.js と Yarn を追加
RUN apt-get update -qq && apt-get install -y \
  build-essential \
  libpq-dev \
  nodejs \
  npm \
  && npm install -g yarn

# 作業ディレクトリを設定
WORKDIR /app

# Gemfile を先にコピーして bundle install
COPY Gemfile Gemfile.lock ./
RUN bundle install

# Rails アプリ全体をコピー
COPY . .

# Rails binstubsを生成
RUN bundle exec rails app:update:bin

# エントリポイントスクリプトをコピー
COPY ./entrypoint.sh /usr/bin/
RUN chmod +x /usr/bin/entrypoint.sh

ENTRYPOINT ["/usr/bin/entrypoint.sh"]

# ポート 3000 を開放
EXPOSE 3000

# Rails サーバーを起動（bundle execを使用）
CMD ["bundle", "exec", "rails", "server", "-b", "0.0.0.0", "-p", "3000"]
